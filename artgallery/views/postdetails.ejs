<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white p-10">
  <a href="/feed" class="text-red-600 underline mb-6 inline-block">← Back to Bits</a>
  
  <div class="max-w-3xl mx-auto bg-zinc-900 p-6 rounded-lg">
    <img class="w-full rounded-md mb-4" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">

    <h1 class="text-3xl font-semibold mb-2"><%= post.title %></h1>
    <p class="mb-4"><%= post.description %></p>

    <p class="text-sm opacity-50">Posted by: <%= post.user.username %></p>
  </div>
</div>
<% include ./partials/footer.ejs %>



<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 text-white p-10">
  <a href="/feed" class="text-red-600 underline mb-6 inline-block">← Back to Bits</a>
  
  <div class="max-w-xl mx-auto rounded-lg border-2 border-white flex flex-col items-center justify-center  bg-gradient-to-r via-red-600 to-white">
    <img class="max-w-xl mt-5 rounded-md mb-2" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">

    <h1 class="text-3xl font-semibold mb-2"><%= post.title %></h1>
    <p class="mb-2"><%= post.description %></p>

    <p class="text-sm">Posted by: <%= post.user.username %></p>
  </div>
</div>
<% include ./partials/footer.ejs %>

 

